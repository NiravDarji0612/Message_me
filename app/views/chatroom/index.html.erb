<h1 class="ui center aligned huge blue inverted header">
  <%= image_tag 'wechat.png', class: "ui circular image" %>
  <br/>
  MessageMe
</h1>

<div class="ui two column grid">
  <div class="container"></div>
  <div class="eleven wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui large feed">
          <div class="event">
            <div class="content">
              <div class="summary">
                 <% @messages.each do |message| %>
                    <%= message.user.username %> : <%= message.message_body %><br/>
                 <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid input">
              <input type="text" placeholder="Enter a message...">
              <i class="fa fa-envelope fa-3x me-2", style="color: blue;", aria-hidden="true"></i>
            </div>
          </div>
        </form>
      </div>
    </div> 
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
  



