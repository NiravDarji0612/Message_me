<h1 class="ui center aligned huge blue inverted header">
  <%= image_tag 'wechat.png', class: "ui circular image" %>
  <br/>
  MessageMe
</h1>

<div class="ui two column grid">
  <div class="container"></div>
  <div class="eleven wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui large feed", id="message-container">
          <div class="event">
            <div class="content">
              <div class="summary">
                 <% @messages.each do |message| %>
                    <%= message.user.username %> : <%= message.message_body %><br/>
                 <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form" }, url: message_path, remote: true) do |f|%>
          <div class="field">
            <div class="ui fluid input">
              <%= f.text_field :message_body %>
              <%= f.button '<i class="fa fa-envelope fa-3x me-2", style="color: blue;", aria-hidden="true"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div> 
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
  



